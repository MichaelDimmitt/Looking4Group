@model Looking4Group.Models.Group

@{
    ViewData["Title"] = "Index";
}

<div class="centerLarge">
    @if (Model != null)
    {
        <h1>Top group result for you:</h1>
        <h3><a asp-action="Group" asp-route-id="@Model.GroupID">@Model.Name</a></h3>
        @Model.Description
    }
    else
    {
        <h1>Please Login to see customized search results!</h1>
        <h3>Custom search is under construction!</h3>
    }
</div>